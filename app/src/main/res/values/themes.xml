<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.TreeVisualisationAndAlgorithms" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.TreeVisualisationAndAlgorithms.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TreeVisualisationAndAlgorithms.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TreeVisualisationAndAlgorithms.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textStyleTitles">

        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="pseudocode_">

        <item name="android:textSize">
            15sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>

    <style name="topicslist">

        <item name="android:textSize">
            17.5sp
        </item>

        <item name="android:textColor">
            #000000
        </item>

    </style>
</resources>